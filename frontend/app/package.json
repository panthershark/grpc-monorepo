{
	"name": "@panthershark/app",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "tsc && vite build",
		"check": "tsc --noEmit",
		"format": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
		"lint": "prettier --check \"src/**/*.{js,jsx,ts,tsx}\"",
		"test": "vitest",
		"test-watch": "vitest watch"
	},
	"devDependencies": {
		"@panthershark/api": "*",
		"@preact/preset-vite": "^2.8.2",
		"@preact/signals": "^1.2.3",
		"@testing-library/preact": "^3.2.4",
		"@types/node": "^20.14.4",
		"happy-dom": "^14.12.0",
		"preact": "^10.22.0",
		"prettier": "^3.3.2",
		"typescript": "^5.4.5",
		"vite": "^5.3.1",
		"vitest": "^1.6.0"
	},
	"prettier": {
		"singleQuote": true,
		"trailingComma": "none",
		"useTabs": true,
		"tabWidth": 2,
		"printWidth": 120
	}
}
